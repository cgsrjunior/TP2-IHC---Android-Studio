<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/light_text"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:text="@string/lighting_text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/light_text_view"
        android:layout_width="133dp"
        android:layout_height="41dp"
        android:layout_marginEnd="72dp"
        android:text="Value:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="333dp" />

    <TextView
        android:id="@+id/acelerometer_text"
        android:layout_width="147dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="44dp"
        android:text="Acelerometer:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/acel_x_axis"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/acel_x_axis"
        android:layout_width="117dp"
        android:layout_height="46dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="80dp"
        android:text="@string/x_axis_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/light_text"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/acel_y_axis"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="88dp"
        android:text="@string/y_axis_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/light_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/acel_z_axis"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="44dp"
        android:text="@string/z_axis_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/acel_y_axis"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gyro_text"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="32dp"
        android:text="Gyroscope:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gyro_x_axis"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gyro_x_axis"
        android:layout_width="133dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="164dp"
        android:text="@string/x_axis_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gyro_y_axis"
        android:layout_width="156dp"
        android:layout_height="42dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="168dp"
        android:text="@string/y_axis_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/gyro_z_axis"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="34dp"
        android:text="@string/z_axis_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gyro_y_axis"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/getGPSBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="57dp"
        android:text="GPS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>